<div id="app" class="row">
  <div id="productlist" class="col-sm-6">
    {{#each products}}
      <div class="card" style="width: 18rem;" id="{{this._id}}">
        {{#each this.thumbnails}}
        <img src="{{this}}" class="card-img-top" alt="imagen producto"/>
        {{/each}}

        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.description}}</p>
          <form id="cartForms">
            <p class="card-text">{{this.price}}</p>
            <button type="submit" class="btn btn-primary">Agregar a carrito</button>  
            </div> 
            <div>
              <input class="form-control me-2" type="text" placeholder=" " aria-label="text" name="cid" id="cid" required>
              <label for="cid">ID del Carrito</label>            
            </div> 
          </form>
          <a href="product/{{this._id}}">
            <button type="button" class="btn btn-info">Ver detalle de producto</button>
          </a>
        </div>
    {{/each}}
  </div>
   <div>
        {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}"><button type="button" class="btn btn-primary"
        style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">Anterior</button></a>
    {{/if}}
    <p>{{page}}</p>

        {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}"><button type="button" class="btn btn-primary"
        style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">Siguiente</button></a>
    {{/if}}
    </div>
 
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>
 <script src="/js/products.js"></script>
             